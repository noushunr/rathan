<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragment.SearchProductFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bg_search_box"
            android:weightSum="1">

            <EditText
                android:id="@+id/edt_home_keyword_srch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/tv_close"
                android:background="@null"
                android:drawableStart="@drawable/icon_search"
                android:drawablePadding="10dp"
                android:fontFamily="@font/roboto"
                android:hint="@string/search_here"
                android:imeOptions="actionSearch"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_close"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/cancel_close_icon"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true">
            </TextView>
<!--            <EditText-->
<!--                android:id="@+id/edt_home_keyword_srch"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:background="@drawable/bg_search_box"-->
<!--                android:drawableStart="@drawable/icon_search"-->
<!--                android:drawableEnd="@drawable/cancel_close_icon"-->
<!--                android:fontFamily="@font/roboto_medium"-->
<!--                android:hint="Search"-->
<!--                android:textColorHint="#2B2828"-->
<!--                android:imeOptions="actionSearch"-->
<!--                android:drawablePadding="10dp"-->
<!--                android:visibility="gone"-->
<!--                android:inputType="textCapSentences"-->
<!--                android:maxLines="1"-->
<!--                android:paddingLeft="5dp"-->
<!--                android:paddingEnd="5dp"-->
<!--                android:textColor="#000"-->
<!--                android:textSize="15sp" />-->

        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_products"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</layout>